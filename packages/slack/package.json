{
  "name": "@aarekaz/switchboard-slack",
  "version": "0.3.3",
  "description": "Slack adapter for Switchboard SDK",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
